<%= form_with model: @tweet, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "キャンプ飯名" %><br />
    <%= f.text_field :title, id:"food_title" %>
  </div>

  <div class="field">
    <%= f.label :body, "レシピ" %><br />
    <%= f.text_area :body, class: :form__text, id:"recipe" %>
  </div>

  <div class="field">
    <%= f.label :image, "キャンプ飯の画像" %><br />
    <%= f.file_field :image, id:"food_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>